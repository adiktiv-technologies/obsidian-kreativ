{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ES2020",
		"module": "CommonJS",
		"lib": [
			"ES2021",
			"DOM"
		],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": ".",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"types": [
			"node"
		],
		"noImplicitAny": false
	},
	"include": [
		"src/**/*.ts",
		"global.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}